---
export interface Props {
  class?: string;
  extended?: boolean;
}

const { class: className, extended } = Astro.props;
---

<div class:list={["grid", className, { extended: !!extended }]}>
  <slot />
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .grid {
    column-gap: 2rem;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    margin-left: auto;
    margin-right: auto;
    max-width: 64.5rem;
    padding: 0 1rem;

    &.extended {
      max-width: 72.5rem;
    }

    .grid {
      padding: 0;
    }

    @media only screen and (max-width: $breakpoint-medium) {
      column-gap: 1.5rem;
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>
