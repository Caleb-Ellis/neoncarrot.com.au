---
import Card from "./Card.astro";

export interface Props {
  color: "red" | "orange";
  img: {
    alt: string;
    src: string;
  };
  message: string;
  title: string;
  width?: number;
}

const { color, img, title, width, message } = Astro.props;
---

<div class="container">
  <Card class="service-card" color={color}>
    <div class="center">
      <img
        alt={img.alt}
        class="service-card__image"
        height="175"
        src={img.src}
        width={width || 175}
        loading="lazy"
      />
    </div>
    <h3 class="heading-4 center">{title}</h3>
    <p class="center">
      {message}
    </p>
  </Card>
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .container {
    flex: 1;
    margin-bottom: $spacing-8;
  }

  .service-card {
    box-sizing: border-box;
    height: 100%;
    padding: $spacing-4 $spacing-6;
  }

  .service-card__image {
    margin-bottom: $spacing-8;
  }
</style>
