---
import { Picture } from "@astrojs/image/components";
import Card from "./Card.astro";

export interface Props {
  color: "red" | "orange";
  img: {
    alt: string;
    src: ImageMetadata;
  };
  message: string;
  title: string;
}

const { color, img, title, message } = Astro.props;
---

<div class="container">
  <Card class="service-card" color={color}>
    <div class="center">
      <Picture
        alt={img.alt}
        class="service-card__image"
        formats={["webp"]}
        height={175}
        src={img.src}
        width={175}
        widths={[175, 350]}
        sizes="(min-width: 1160px) 175px, 350px"
        loading="lazy"
      />
    </div>
    <h3 class="heading-4 center">{title}</h3>
    <p class="center">
      {message}
    </p>
  </Card>
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .container {
    flex: 1;
    margin-bottom: $spacing-8;
  }

  .service-card {
    box-sizing: border-box;
    height: 100%;
    padding: $spacing-4 $spacing-6;
  }

  .service-card__image {
    margin-bottom: $spacing-8;
  }
</style>
