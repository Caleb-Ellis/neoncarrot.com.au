---
import Card from "./Card.astro";

export interface Props {
  color: "red" | "orange" | "yellow";
  img: {
    alt: string;
    height: number;
    src: string;
  };
}

const { color, img } = Astro.props;
---

<div class="tech-solution-card-container">
  <Card class="tech-solution-card" color={color} fullWidth>
    <div class="center">
      <img alt={img.alt} height={`${img.height}`} src={img.src} />
    </div>
  </Card>
</div>

<style lang="scss">
  @import "../styles/variables.scss";

  .tech-solution-card-container {
    align-items: center;
    display: flex;
    height: 100%;
    justify-content: center;
  }

  .tech-solution-card {
    margin-bottom: $spacing-8;
    padding: $spacing-6;
  }

  .full-width {
    width: 100%;
  }
</style>
